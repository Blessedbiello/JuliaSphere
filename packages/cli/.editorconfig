# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript and JavaScript files
[*.{ts,js}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Docker files
[*.dockerfile]
indent_style = space
indent_size = 2

# Git files
[*.gitignore]
insert_final_newline = false

# NPM files
[*.npmrc]
insert_final_newline = false

# Editor files
[.editorconfig]
insert_final_newline = false

# License files
[LICENSE]
insert_final_newline = false

# README files
[README.md]
trim_trailing_whitespace = false
max_line_length = off 