{
  "name": "juliaos-cli",
  "version": "0.1.0",
  "description": "Interactive CLI for JuliaOS",
  "main": "src/index.js",
  "bin": {
    "juliaos": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc && pkg .",
    "start": "node bin/cli.js",
    "test": "jest"
  },
  "keywords": [
    "juliaos",
    "cli",
    "agent",
    "swarm",
    "framework"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "fs-extra": "^11.1.1",
    "find-up": "^5.0.0",
    "dotenv": "^16.0.3",
    "@juliaos/julia-bridge": "^0.1.0"
  },
  "devDependencies": {
    "jest": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html"
    ],
    "verbose": true,
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "pkg": {
    "targets": ["node16-macos", "node16-linux", "node16-win"],
    "outputPath": "dist",
    "assets": [
      "../../julia/**/*"
    ]
  }
}
