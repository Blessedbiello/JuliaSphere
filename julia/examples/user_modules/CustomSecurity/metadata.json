{
    "name": "CustomSecurity",
    "description": "Custom security extensions for Web3 cross-chain DeFi projects",
    "author": "Your Organization",
    "version": "0.1.0",
    "dependencies": [
        "SecurityManager",
        "RiskManagement",
        "MLIntegration"
    ],
    "created_at": "2023-08-21T12:00:00",
    "category": "security",
    "tags": [
        "security",
        "defi",
        "risk",
        "web3",
        "cross-chain"
    ],
    "configuration": {
        "custom_risk_thresholds": {
            "type": "dictionary",
            "description": "Custom risk thresholds by chain",
            "default": {
                "ethereum": 0.5,
                "arbitrum": 0.6,
                "optimism": 0.6,
                "polygon": 0.5
            }
        },
        "wallet_whitelist": {
            "type": "array",
            "description": "Whitelisted wallet addresses",
            "default": []
        },
        "contract_whitelist": {
            "type": "dictionary",
            "description": "Whitelisted contract addresses by chain",
            "default": {}
        },
        "notification_endpoints": {
            "type": "array",
            "description": "Endpoints for security notifications",
            "default": []
        },
        "ml_model_path": {
            "type": "string",
            "description": "Path to custom ML model for anomaly detection",
            "default": "models/security_anomaly_detector.jld2"
        },
        "enable_advanced_monitoring": {
            "type": "boolean",
            "description": "Enable advanced ML-based security monitoring",
            "default": true
        }
    },
    "hooks": [
        {
            "name": "transaction_pre",
            "description": "Pre-transaction validation and whitelist checking"
        },
        {
            "name": "transaction_risk_assessment",
            "description": "Custom risk assessment for transactions"
        },
        {
            "name": "transaction_post",
            "description": "Post-transaction monitoring and notifications"
        }
    ]
} 