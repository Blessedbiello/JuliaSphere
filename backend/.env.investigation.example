# JuliaOS Investigation System Environment Variables
# Copy this file to .env and fill in your actual API keys

# Required for LLM-powered analysis and content generation
GEMINI_API_KEY=your_gemini_api_key_here

# Required for social media intelligence
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Optional: Custom Solana RPC endpoint (defaults to public mainnet)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Optional: Investigation system configuration
INVESTIGATION_MAX_DEPTH=7
INVESTIGATION_AUTO_PUBLISH=false
INVESTIGATION_PRIORITY_THRESHOLD=MEDIUM

# X/Twitter API credentials (for posting threads)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here