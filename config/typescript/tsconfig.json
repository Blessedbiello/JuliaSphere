{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@juliaos/*": ["packages/*/src"],
      "@bridges/*": ["bridges/*/src"],
      "@contracts/*": ["contracts/*/src"],
      "@tests/*": ["tests/*"],
      "@julia/*": ["julia/src/*"],
      "@config/*": ["config/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "bridges/*/src/**/*",
    "julia/src/**/*",
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "test-ledger",
    "test-cli-project",
    "test-project"
  ]
} 